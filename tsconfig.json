{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "tsup.config.ts"],
  "exclude": ["node_modules", "dist", "generated/prisma"]
}